# ================================
# Rug-Panel - Environment Variables
# ================================
# Copy this file to .env and configure values:
#   cp .env.example .env
#   nano .env
# ================================

# ==================== Network Settings ====================
# Web panel port
PANEL_PORT=8000

# WireGuard VPN port
WG_PORT=51820

# ==================== Main Settings ====================
# Debug mode (true/false)
DEBUG=false

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ==================== SECURITY (REQUIRED!) ====================
# Secret key for JWT tokens - MUST be generated!
# Generate: python -c "import secrets; print(secrets.token_urlsafe(32))"
# Or:       openssl rand -base64 32
SECRET_KEY=CHANGE_ME_GENERATE_RANDOM_KEY_HERE

# JWT token lifetime in minutes (1440 = 24 hours)
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ==================== WireGuard ====================
# WireGuard interface name
WG_INTERFACE=wg0

# DNS servers for clients (comma-separated)
DEFAULT_DNS=77.88.8.8, 8.8.8.8

# Allowed IPs for routing (comma-separated)
DEFAULT_ALLOWED_IPS=0.0.0.0/0, ::/0

# Keepalive interval in seconds (for NAT)
DEFAULT_PERSISTENT_KEEPALIVE=25

# ==================== Version ====================
# Panel version (used for Docker image tagging)
PANEL_VERSION=1.4.3

# ==================== Interface Language ====================
# Panel interface language (ru - Russian, en - English)
LANGUAGE=en

# ==================== Optional ====================
# Config cache TTL (in seconds)
# CONFIG_CACHE_TTL=5

# Status cache TTL (in seconds)
# STATUS_CACHE_TTL=2

# QR code LRU cache size
# QR_CACHE_SIZE=100
